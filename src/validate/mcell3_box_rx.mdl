  DEFINE_SURFACE_REGIONS {
    r1 {
      ELEMENT_LIST = [TOP,BOTTOM,LEFT,RIGHT,FRONT,BACK]
      MOLECULE_DENSITY { B' = 500 }
    }
  }
}

