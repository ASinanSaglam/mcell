  CORNERS = [1.3,1.3,1.3] , [1.7,1.7,1.7]
  DEFINE_SURFACE_REGIONS {
    r1 {
      ELEMENT_LIST = [ALL_ELEMENTS]
      SURFACE_CLASS = transp
    }
